# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/URL_Shortner
MONGODB_TEST_URI=mongodb://localhost:27017/url-shortener-test

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
LOG_ERROR_FILE=./logs/error.log

# URL Shortener Configuration
SHORT_CODE_LENGTH=6
SHORT_CODE_PREFIX=
MAX_SHORT_URL_LENGTH=2048
SHORT_CODE_CHARSET=abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
